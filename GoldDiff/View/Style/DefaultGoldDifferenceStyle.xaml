<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controlElement="clr-namespace:GoldDiff.View.ControlElement"
                    xmlns:sharedTheme="clr-namespace:GoldDiff.Shared.View.SharedTheme;assembly=GoldDiff.Shared"
                    xmlns:flatTheme="clr-namespace:FlatXaml.Theme;assembly=FlatXaml">

    <Style TargetType="{x:Type controlElement:GoldDifferenceView}">
        <Setter Property="BlueSideForeground" Value="{DynamicResource {x:Static sharedTheme:GoldDiffSharedThemeKeys.LoLTeamBlueSideRegular}}" />
        <Setter Property="RedSideForeground" Value="{DynamicResource {x:Static sharedTheme:GoldDiffSharedThemeKeys.LoLTeamRedSideRegular}}" />
        <Setter Property="NoDifferenceForeground" Value="{DynamicResource {x:Static flatTheme:FlatThemeKeys.ForegroundRegular}}" />
    </Style>

</ResourceDictionary>