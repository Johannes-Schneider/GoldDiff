<Window x:Class="GoldDiff.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GoldDiff.View"
        xmlns:properties="clr-namespace:GoldDiff.Properties"
        xmlns:controlElement="clr-namespace:GoldDiff.View.ControlElement"
        xmlns:command="clr-namespace:GoldDiff.View.Command"
        mc:Ignorable="d"

        x:Name="This"

        Style="{DynamicResource {x:Static local:GoldDiffResourceKey.DefaultWindowStyle}}"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"

        Title="{x:Static properties:MainWindowResources.Title}"
        Height="600"
        Width="800">

    <Window.DataContext>
        <Binding ElementName="This" Path="PrivateModel" />
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controlElement:WindowControlBar Grid.Column="0"
                                         Grid.Row="0"
                                         CanClose="True"
                                         CanMinimize="True"
                                         CanMaximize="False" />
    </Grid>
</Window>